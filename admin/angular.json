{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "demo1-app": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
			 "optimization": false,
            "outputPath": "dist",
            "showCircularDependencies": false,
            "allowedCommonJsDependencies": [
              "object-path",
              "apexcharts",
              "clipboard.js",
              "highlight.js",
			  "ngx-owl-carousel",
			  "ngx-google-places-autocomplete"
            ],
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "aot": true,
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.scss",
              "src/assets/css/style.css",
              "src/assets/css/owl.carousel.min.css",
              "src/assets/css/owl.theme.default.min.css",
              "src/assets/css/resp-style.css",       
			  "./node_modules/owl.carousel/dist/assets/owl.carousel.min.css",  
              "./node_modules/owl.carousel/dist/assets/owl.theme.default.min.css" ,
			  "./node_modules/intl-tel-input/build/css/intlTelInput.css",
              "node_modules/datatables.net-bs4/css/dataTables.bootstrap4.min.css"
            ],
            "scripts": [
			"node_modules/popper.js/dist/umd/popper.min.js",
              "node_modules/jquery/dist/jquery.min.js",
              "src/assets/js/off-canvas.js",
              "src/assets/js/hoverable-collapse.js",
              "src/assets/js/misc.js",
              "src/assets/js/owl.carousel.min.js",
              "node_modules/apexcharts/dist/apexcharts.min.js",
              "node_modules/clipboard/dist/clipboard.js",
              "node_modules/jquery/dist/jquery.js",
			  "./node_modules/jquery/dist/jquery.min.js",  
             "./node_modules/owl.carousel/dist/owl.carousel.min.js",
              "node_modules/datatables.net/js/jquery.dataTables.js",
              "node_modules/datatables.net-bs4/js/dataTables.bootstrap4.min.js"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
               "optimization": {
				  "scripts": true,
				  "styles": {
					"minify": true,
					"inlineCritical": false
				  },
				  "fonts": true
				},
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "5mb",
                  "maximumError": "7mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "port": 4201,
            "browserTarget": "demo1-app:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "demo1-app:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "demo1-app:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.scss"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.app.json",
              "tsconfig.spec.json",
              "e2e/tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "demo1-app:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "demo1-app:serve:production"
            }
          }
        }
      }
    }
  },
  "defaultProject": "demo1-app",
  "cli": {
    "analytics": false
  }
}