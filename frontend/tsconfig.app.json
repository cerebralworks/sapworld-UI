/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
	"skipLibCheck": true,
    "types": [
      "@angular/localize"
    ]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "angularCompilerOptions": {
    "enableIvy": false
  },
  "include": [
    "src/**/*.d.ts"
  ]
}
